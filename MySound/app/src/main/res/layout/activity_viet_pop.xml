<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_viet_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.mysound.VietPopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/NewReleaseNavigation"
            style="@style/NavigationTextUnclicked"
            android:id="@+id/new_release" />

        <TextView
            android:text="@string/VietPopNavigation"
            style="@style/NavigationTextClicked"
            android:id="@+id/viet_pop" />

        <TextView
            android:text="@string/CurrentPlayNavigation"
            style="@style/NavigationTextUnclicked"
            android:id="@+id/current_play" />

    </LinearLayout>

    <TextView
        style="@style/ActivityDescription"
        android:text="Top Vietnamese pop songs!"/>

    <ListView
        style="@style/SongListView"
        android:id="@+id/viet_pop_listview" />

</LinearLayout>
